<% stylesheet_link_tag 'posts/comments_tile' %>

<div class="comments-tile">
  <ul>
    <% comments.each do |comment| %>
      <li>
          <div>
            <p class="commenter"><%= comment.user.name %>:</p>
            <p><%= comment.text %></p>
          </div>
          <% if can? :destroy, comment %>
            <%= form_with url: user_post_comment_path(@user, @post, comment), method: :delete do %>
              <button class="custom-button">Delete</button>
            <% end %>
          <% end %>

      </li>
    <% end %>
  </ul>
  <% if comments.length == 0 %>
    <p>No Comments yet</p>
  <% end %>
</div>
