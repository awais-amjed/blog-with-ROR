<% stylesheet_link_tag 'posts/comments_tile' %>

<div class="comments-tile">
  <ul>
    <% comments.each do |comment| %>
      <li>
        <p class="commenter"><%= comment.user.name %>:</p>
        <p><%= comment.text %></p>
      </li>
    <% end %>
  </ul>
  <% if comments.length == 0 %>
    <p>No Comments yet</p>
  <% end %>
</div>
