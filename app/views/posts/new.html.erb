<% stylesheet_link_tag 'posts/new' %>

<div id="new-post-page" class="content">
  <h1>Create a New Post</h1>
  <%= form_with model: post, url: user_posts_path(@user, post), method: :post, local: true do |form| %>
    <%= form.text_field :title, placeholder: 'Enter Title here ...' %>
    <%= form.text_area :text, rows: 10, placeholder: "What's on your mind ..." %>
    <%= form.submit "Submit" %>
  <% end %>
</div>